{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitUseStrict": true,
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": "./src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
