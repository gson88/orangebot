{
  "env": {
    "es6": true,
    "commonjs": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "modules": true
    }
  },
  "globals": {
    "process": false,
    "__dirname": false
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "curly": 2,
    "indent": ["error", 2, {"SwitchCase": 1}],
    "keyword-spacing": 2,
    "linebreak-style": ["error", "unix"],
    "no-console": 0,
    "no-const-assign": "off",
    "no-irregular-whitespace": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-unused-vars": 1,
    "object-curly-spacing": [2, "always"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": 2,
    "strict": [2, "never"]
  }
}