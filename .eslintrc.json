{
  "env": {
    "commonjs": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "globals": {
    "process": false,
    "chrome": false,
    "__dirname": false
  },
  "rules": {
    "comma-dangle": ["error", "never"],
    "curly": 2,
    "keyword-spacing": 2,
    "linebreak-style": ["error", "unix"],
    "no-console": 0,
    "no-const-assign": "off",
    "no-irregular-whitespace": 0,
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-unused-vars": 2,
    "object-curly-spacing": [2, "always"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-blocks": 2,
    "strict": [2, "never"]
  }
}